

<% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>

<div class="row show_restaurant">
	<div class="img_wrap show_r_img">
		<%= image_tag "/uploads/cafe/#{@restaurant.image}", size: '100' %>
	</div>
	<div class="cafe-item-info new_class_show">
		
		<h1><%=@restaurant.name%> </h1>
	
		<pre><%= @restaurant.description %></pre>
						
	</div>
</div>	

<%= link_to 'Добавить Блюдо в меню', new_food_path(rest_id: @restaurant.id), class: "btn btn-warning" %><br><br>
	
<%= link_to 'Edit', edit_restaurant_path(@restaurant), class: 'btn btn-default' %> |
<%= link_to 'Back', restaurants_path, class: 'btn btn-default' %>

	<h2>Блюда Ресторана</h2>
<div class="rest_menu col-md-12">
	<table class="table ">
  <thead>
    <tr>
      <th>Название</th>
      <th>Изображение</th>
      <th>Категория</th>
      <th>Описание</th>
      <th>Цена</th>
      <th colspan="3">Действие</th>
    </tr>
  </thead>

  <tbody>
    <% @restaurant.foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= image_tag "/uploads/foods/#{food.id}", size: '100' %></td>
        <td><%= food.category.name %></td>
        <td><%= food.description %></td>
        <td><%= food.price %>c</td>
        <td><%= link_to 'Show', food, class: "btn btn-default" %>
          <%= link_to 'Edit', edit_food_path(food), class: "btn btn-default" %>
          <%= link_to 'Destroy', food, class: "btn btn-default" ,method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>